<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

  <display-name>Dynamic Payment</display-name>
  
  <servlet>
		<servlet-name>spring-web</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
  <servlet>
  	<description>
  	</description>
  	<display-name>HelloServlet</display-name>
  	<servlet-name>HelloServlet</servlet-name>
  	<servlet-class>HelloServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
		<servlet-name>spring-web</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>HelloServlet</servlet-name>
		<url-pattern>/HelloServlet</url-pattern>
	</servlet-mapping>
  
  <servlet>
        <servlet-name>payServlet</servlet-name>
        <servlet-class>com.dynamicpayment.unionpay.QuickPaySampleServLet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>payServlet</servlet-name>
        <url-pattern>/payServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>voidServlet</servlet-name>
        <servlet-class>com.dynamicpayment.unionpay.QuickPayVoidServLet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>voidServlet</servlet-name>
        <url-pattern>/voidServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>queryServlet</servlet-name>
        <servlet-class>com.dynamicpayment.unionpay.QuickPayQueryServLet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>queryServlet</servlet-name>
        <url-pattern>/queryServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MDKFrontEndUrl</servlet-name>
        <servlet-class>com.dynamicpayment.unionpay.QuickPayResFrontEndServLet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MDKFrontEndUrl</servlet-name>
        <url-pattern>/MDKFrontEndUrl</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MDKBackEndUrl</servlet-name>
        <servlet-class>com.dynamicpayment.unionpay.QuickPayResBackEndServLet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MDKBackEndUrl</servlet-name>
        <url-pattern>/MDKBackEndUrl</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CUPFrontEndUrl</servlet-name>
        <servlet-class>com.dynamicpayment.unionpay.QuickPayCUPFrontEndServLet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CUPFrontEndUrl</servlet-name>
        <url-pattern>/CUPFrontEndUrl</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CUPQueryUrl</servlet-name>
        <servlet-class>com.dynamicpayment.unionpay.QuickPayCUPBackEndServLet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CUPQueryUrl</servlet-name>
        <url-pattern>/CUPQueryUrl</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
